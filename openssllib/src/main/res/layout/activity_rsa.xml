<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公钥：" />

            <TextView
                android:id="@+id/tvPublicKey"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="123456789oasdfgh" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="私钥：" />

            <TextView
                android:id="@+id/tvPrivateKey"
                android:layout_width="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                tools:text="123456789oasdfgh" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加密内容：" />

            <EditText
                android:id="@+id/etContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#8a000000"
                android:textSize="15sp"
                tools:text="123456789oasdfgh" />
        </LinearLayout>


        <TextView
            android:id="@+id/tvJni"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
             />

        <TextView
            android:id="@+id/tvJava"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:maxLines="2"
            android:ellipsize="end"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnRSAPublicKeyEncrypt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RSA公钥加密" />

            <Button
                android:id="@+id/btnRSAPrivateKeyDecrypt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RSA私钥解密" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnRSAPrivateKeyEncrypt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RSA私钥加密" />

            <Button
                android:id="@+id/btnRSAPublicKeyDecrypt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RSA公钥解密" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnRSAPrivateKeySign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RSA私钥签名" />

            <Button
                android:id="@+id/btnRSAPublicKeyVerify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="RSA公钥验签" />

        </LinearLayout>

        <Button
            android:layout_marginTop="8dp"
            android:layout_marginBottom="30dp"
            android:id="@+id/btnGenerateRSAKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RSA生成密钥对" />


    </LinearLayout>
</ScrollView>